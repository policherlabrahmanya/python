class Solution(object):
    def reverse(self, x):
        """
        :type x: int
        :rtype: int
        """
        sign = -1 if x < 0 else 1
        x = abs(x)
        reversed_x = 0
        
        # Define the 32-bit integer range
        INT_MAX = 2**31 - 1
        INT_MIN = -2**31

        while x > 0:
            digit = x % 10
            # Check for potential overflow before adding the new digit
            if reversed_x > INT_MAX // 10 or (reversed_x == INT_MAX // 10 and digit > 7):
                return 0 # Overflow
            
            reversed_x = reversed_x * 10 + digit
            x //= 10
        
        result = sign * reversed_x
        
        # Final check for overflow after applying the sign
        if result > INT_MAX or result < INT_MIN:
            return
  return result
