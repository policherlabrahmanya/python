class Solution(object):
    def threeSum(self, nums):
        """
        :type nums: List[int]
        :rtype: List[List[int]]
        """
        res = []
        nums.sort()  # Sort the array to efficiently handle duplicates and use two pointers

        for i in range(len(nums) - 2):
            # Skip duplicate elements for the first number of the triplet
            if i > 0 and nums[i] == nums[i - 1]:
                continue

            left, right = i + 1, len(nums) - 1

            while left < right:
                current_sum = nums[i] + nums[left] + nums[right]

                if current_sum == 0:
                    res.append([nums[i], nums[left], nums[right]])
                    # Skip duplicate elements for the second and third numbers
                    while left < right and nums[left] == nums[left + 1]:
                        left += 1
                    while left < right and nums[right] == nums[right - 1]:
                        right -= 1
                    left += 1
                    right -= 1
                elif current_sum < 0:
                    left += 1  # Increment left pointer to increase the sum
                else:
                    right -= 1 # Decrement right pointer to decrease the sum
        return res
