class Solution(object):
    def myAtoi(self, s):
        """
        :type s: str
        :rtype: int
        """
        if not s:
            return 0

        # Step 1: Ignore leading whitespace
        i = 0
        while i < len(s) and s[i] == ' ':
            i += 1

        if i == len(s): # If only whitespace, return 0
            return 0

        # Step 2: Determine sign
        sign = 1
        if s[i] == '-':
            sign = -1
            i += 1
        elif s[i] == '+':
            i += 1

        # Step 3: Read digits and convert
        result = 0
        MAX_INT = 2**31 - 1
        MIN_INT = -2**31

        while i < len(s) and s[i].isdigit():
            digit = int(s[i])

            # Check for overflow before adding the new digit
            if sign == 1 and (result > MAX_INT // 10 or (result == MAX_INT // 10 and digit > 7)):
                return MAX_INT
            if sign == -1 and (result > abs(MIN_INT) // 10 or (result == abs(MIN_INT) // 10 and digit > 8)):
                return MIN_INT

            result = result * 10 + digit
            i += 1

        # Apply sign and return clamped value
        final_result = sign * result
        
        # Step 4: Clamping (already handled during conversion for efficiency)
        # This final check ensures the result is within bounds if the overflow logic was not triggered
        if final_result > MAX_INT:
            return MAX_INT
        if final_result < MIN_INT:
            return MIN_INT
            
        return final_result
