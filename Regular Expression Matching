class Solution(object):
    def isMatch(self, s, p):
        """
        :type s: str
        :type p: str
        :rtype: bool
        """
        memo = {}

        def dp(i, j):
            if (i, j) in memo:
                return memo[(i, j)]

            if j == len(p):
                # If pattern is exhausted, string must also be exhausted for a match
                res = i == len(s)
            else:
                # Check if current characters match (or if pattern has '.')
                first_match = (i < len(s) and p[j] in {s[i], '.'})

                if j + 1 < len(p) and p[j + 1] == '*':
                    # If '*' is present, either match zero occurrences of preceding element
                    # or match one or more occurrences
                    res = dp(i, j + 2) or (first_match and dp(i + 1, j))
                else:
                    # No '*' present, simply match current characters and advance both
                    res = first_match and dp(i + 1, j + 1)

            memo[(i, j)] = res
            return res

        return dp(0, 0)
